# Identity Service Environment Variables
# Copy to .env if you want to override defaults in docker-compose.yml

# Database Configuration
DB_URL=jdbc:mysql://mysql:3306/identity_service
DB_USERNAME=identity_user
DB_PASSWORD=identity_password

# Server Configuration
SERVER_PORT=8080

# JWT Configuration (CHANGE IN PRODUCTION!)
JWT_SECRET=your-super-secret-key-minimum-32-bytes-length-change-in-production
JWT_EXPIRATION=86400000
JWT_REFRESH_EXPIRATION=604800000

# Database Migration
HIBERNATE_DDL_AUTO=update

# Swagger / OpenAPI
SWAGGER_UI_ENABLED=true
OPENAPI_DOCS_ENABLED=true

# Logging
LOG_LEVEL=INFO
LOG_LEVEL_APP=DEBUG

# Service Configuration
TENANT_ID=default

